<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.sos.ds.hibernate.entities.parameter.Parameter" table="parameter">
    	<comment>Table to store additional obervation information (om:parameter). Mapping file: mapping/core/Parameter.hbm.xml</comment>
        <id name="parameterId" type="long">
            <column name="parameterId">
            	<comment>Table primary key</comment>
            </column>
            <generator class="native">
            	<param name="sequence">parameterId_seq</param>
            </generator>
        </id>
        <discriminator column="hibernateDiscriminator" type="string" />
        <property name="name" type="string">
            <column name="name" not-null="true" index="paramNameIdx" unique-key="paramIdentity">
            	<comment>Parameter name</comment>
            </column>
        </property>
        <property name="value" 
                  type="string">
            <column name="value" index="paramValueIdx" unique-key="paramIdentity">
                <comment>Parameter value</comment>
            </column>
        </property>
        <many-to-one name="unit"
                     class="org.n52.sos.ds.hibernate.entities.Unit"
                     fetch="select"
                     lazy="no-proxy"
                     foreign-key="paramValueUnitFk">
            <column name="unitId"
                    not-null="false">
                <comment>Foreign Key (FK) to the related unit of measure. Contains "unit".unitid. Optional</comment>
            </column>
        </many-to-one>
        <subclass name="org.n52.sos.ds.hibernate.entities.parameter.BooleanValuedParameter" 
                    extends="org.n52.sos.ds.hibernate.entities.parameter.Parameter"
                    discriminator-value="BOOLEAN" />
        <subclass name="org.n52.sos.ds.hibernate.entities.parameter.CategoryValuedParameter" 
                    extends="org.n52.sos.ds.hibernate.entities.parameter.Parameter"
                    discriminator-value="CATEGORY" />
        <subclass name="org.n52.sos.ds.hibernate.entities.parameter.CountValuedParameter" 
                    extends="org.n52.sos.ds.hibernate.entities.parameter.Parameter"
                    discriminator-value="COUNT" />
        <subclass name="org.n52.sos.ds.hibernate.entities.parameter.QuantityValuedParameter" 
                    extends="org.n52.sos.ds.hibernate.entities.parameter.Parameter"
                    discriminator-value="QUANTITY" />
        <subclass name="org.n52.sos.ds.hibernate.entities.parameter.TextValuedParameter" 
                    extends="org.n52.sos.ds.hibernate.entities.parameter.Parameter"
                    discriminator-value="TEXT" />
    </class>
</hibernate-mapping>