<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <ctx:component-scan base-package="org.n52.sos.mqtt.config" />

    <!--<bean class="org.n52.sos.mqtt.MqttConsumer"/>-->

    <bean id="jsonConfigDecoder" class="org.n52.sos.mqtt.config.json.JsonMqttConfigurationDecoder"/>
    <bean id="jsonConfigEncoder" class="org.n52.sos.mqtt.config.json.JsonMqttConfigurationEncoder"/>
    <bean id="jsonConfigDao" class="org.n52.sos.mqtt.config.json.JsonMqttConfigurationDao"/>

    <bean class="org.n52.sos.mqtt.MqttConsumerRepository"/>
    <bean class="org.n52.sos.mqtt.MqttInsertObservationRequestHandler"/>

    <bean class="org.n52.sos.mqtt.decode.MqttDecoderRepository"/>
    <bean class="org.n52.sos.mqtt.decode.MqttDecoderFactory"/>

</beans>
